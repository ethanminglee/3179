{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 900,
    "title": {
        "text": "Transport Infrastucture of Melbourne", "fontSize": 20, "offset": -15,
        "subtitleColor": "grey"
    },
    "config": {
        "font": "Roboto",
        "style": {"cell": {"stroke": "transparent"}},
        "legend": {"orient": "bottom", "labelFontSize": 12, "offset": -25}
    },
    "projection": {
        "type": "mercator",
        "pointRadius": 1
    },
    "params": [
        {
          "name": "time_select",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 23,
            "step": 1,
            "name": "Time: "
          }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "../data/MB_2016_VIC.json",
                "format": {"type": "topojson", "feature": "MB_2016_VIC"},
                "name": "building_outlines"
            },
            "mark": {"type": "geoshape", "fill": "#c3bba4", "stroke": "white"}
        },
        {
            "data": {
                "url": "../data/pedestrian_counting.csv"
            },
            "transform": [
                {"filter": "datum.Hour == time_select"}
            ],
            "mark": {
                "type": "circle", 
                "filled": true,
                "opacity": 1
            },
            "encoding": {
                "longitude": {"field": "Longitude", "type": "quantitative"},
                "latitude": {"field": "Latitude", "type": "quantitative"},
                "size": {"field": "Average", "type": "quantitative"},
                "color": {"field": "Average", "type": "quantitative", "scale": {"scheme": "greens"}},
                "tooltip": [
                    {"field": "Area of Interest", "type": "nominal", "title": "Area of Interest"},
                    {"field": "Hour", "type": "quantitative", "title": "Hour"},
                    {"field": "Zone_Number", "type": "quantitative", "title": "Zone Number"},
                    {"field": "Latitude", "type": "quantitative", "title": "Latitude"},
                    {"field": "Longitude", "type": "quantitative", "title": "Longitude"}
                ]
            }
        }
    ]
}